<div class="card">
  <div class="card-body">
    <%= form_with model: currency, url: admin_create_path, local: true do |form| %>
      <div class="form-group">
        <%= form.label :value, "Value:" %>
        <%= form.number_field :value, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :expired_in, "Time | UTC:" %>
        <div class="row">
          <div class="col">
            <%= form.datetime_select :expired_in, {}, { class:"custom-select col-2" } %>
          </div>
        </div>
      </div>
      <div class="actions">
        <%= form.submit "Update", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
